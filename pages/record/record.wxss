page{
    background-color: #fff;
}
.nav{
    position: fixed;
    top: 0;
    width: 100%;
    display: flex;
    flex-direction:row;
    align-items: center;
    justify-content:space-around;
    background-color: #daab5f;
}

.nav_item{
    color: #fff;
    font-size: 28rpx;
    text-align: center;
    padding: 0 3px;
    height:60rpx;
    line-height: 60rpx;
    border-bottom: 3px solid transparent;
}
.nav_item.active{
    border-bottom: 3px solid #fff;
}

.record__content{
    margin-top: 66rpx;
}

.userinfo{
    display: flex;
    flex-direction: column;
    align-items:center;
    background-color: #c63629;
    padding-bottom: 69rpx;
}
.avatar{
    width: 125rpx;
    height: 125rpx;
    border-radius: 50%;
    border: 6rpx solid #eee;
    margin-top: 46rpx;
    margin-bottom: 28rpx;
}

.nickname{
    color: #fff;
    font-size: 26rpx;
    margin-bottom: 32rpx;
}

.pocket_num{
    font-size: 26rpx;
    color: #fec85a;
    margin-bottom: 30rpx;
}

.pocket_money{
    font-size: 36rpx;
    color: #fec85a;
}

.pocket_money text{
    font-size: 52rpx;
    color: #fec85a;
    margin-right: 16rpx;
}

.record_list{
    background-color: #fff;
}

.record_list_item{
    padding: 32rpx 30rpx;
    border-bottom: 1px solid #c6c6c6;
}
.record_list_item .text{
    line-height: 1;
    color: #1d1d1d;
    font-size: 28rpx;
    margin-bottom: 18rpx;
}


.record_list_item .time{
    line-height: 1;
    color: #b1b1b1;
    font-size: 28rpx;
}

.record_list_item text{
    float: right;
}