page{
    overflow: hidden;
}
.pocket__form{
    margin:68rpx 45rpx 0;
    background-color: #fff;
    -webkit-border-radius: 5px;
    -moz-border-radius: 5px;
    border-radius: 5px;
}
.pocket__form_header_user{
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 60rpx;
}
.avatar {
    width: 103rpx;
    height: 103rpx;
    margin: -45rpx 0 22rpx;
    border-radius: 50%;
    border: 6rpx solid #eee;
}

.nickname {
    color: #414140;
    font-size: 24rpx;
    line-height: 1;
}

.pocket__form_body{
    padding: 0 37rpx;
}

.pocket__form_body .item{
    margin-bottom: 42rpx;
    display: flex;
    flex-direction:row;
    align-items: center;
}

.pocket__form_body .label{
    font-size: 30rpx;
    line-height: 36rpx;
    width: 158rpx;
}
.pocket__form_body .placeholder{
    color: #abaaa7;
    font-size: 30rpx;
    line-height: 36rpx;
}

.pocket__form_body input{
    border-bottom: 1px solid #bdbdbd;
    font-size: 30rpx;
    line-height: 36rpx;
}

.pocket__form_body .item.picker{
    display: flex;
    flex-direction:column;
    align-items: center;
}

.picker .label{
    color: #c0a06d;
    font-size: 24rpx;
    margin-bottom: 16rpx;
    text-align: center;
}

.picker picker{
    width: 592rpx;
    height: 65rpx;
    line-height: 65rpx;
    font-size: 28rpx;
    color: #414140;
    text-align: center;
    background-color: #eae9e9;
    border-radius: 5px;
    position: relative;
}

picker .arrow{
    position: absolute;
    width:0;
    height:0;
    border: 20rpx solid;
    border-color: #a09f9f transparent transparent transparent;
    right: 24rpx;
    top: 24rpx;
}


.pocket__form_body button{
    background-color: #e83e43;
    font-size: 32rpx;
    line-height: 80rpx;
    color: #fff;
    width: 544rpx;
    border-radius: 20px;
    box-shadow: 5rpx 5rpx 10rpx #d7ac9e;
}

.pocket__form_footer{
    color: #83827b;
    font-size: 24rpx;
    line-height: 36rpx;
    margin: -30rpx 0 0;
    padding-bottom: 13rpx;
    text-align: center;
}

