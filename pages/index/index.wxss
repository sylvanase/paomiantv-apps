/**index.wxss**/
page{
    overflow: hidden;
}
.pocket__form{
    margin:30rpx 45rpx 0;
    background-color: #fff;
    -webkit-border-radius: 5px;
    -moz-border-radius: 5px;
    border-radius: 5px;
}
.pocket__form_header {
    position: relative;
}
.pocket__form_header_user{
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-bottom: 24rpx;
}
.avatar {
    width: 103rpx;
    height: 103rpx;
    margin: -20rpx 27rpx 0;
    border-radius: 50%;
    border: 6rpx solid #eee;
}

.nickname {
    color: #414140;
    font-size: 24rpx;
    line-height: 36rpx;
    margin-top: -6rpx;
}

.pocket__form_header_pop{
    position: absolute;
    top: -13rpx;
    right: -22rpx;
    width: 161rpx;
    height:210rpx;
}

.pocket__form_body{
    padding: 0 37rpx;
}

.pocket__form_body .item{
    margin-bottom: 42rpx;
    display: flex;
    flex-direction:row;
    align-items: center;
}

.pocket__form_body .label{
    font-size: 30rpx;
    line-height: 36rpx;
    width: 158rpx;
}
.pocket__form_body .placeholder{
    color: #abaaa7;
    font-size: 30rpx;
    line-height: 36rpx;
}

.pocket__form_body input{
    border-bottom: 1px solid #bdbdbd;
    font-size: 30rpx;
    line-height: 36rpx;
}

.pocket__form_body .short{
    width: 300rpx;
}

.pocket__form_body .long{
    width: 374rpx;
}

.pocket__form_body .add_video{
    width: 217rpx;
    height: 215rpx;
    margin: 0 auto;
}

.pocket__form_body .video_cover{
    box-sizing: border-box;
    width: 154rpx;
    height: 215rpx;
    margin: 0 auto;
    border: 3px solid #deceae;
    display: flex;
    align-items: center;
    overflow: hidden;
}

.video_cover image{
    width: 100%;
}

.pocket__form_body .ref{
    width: 23rpx;
    height: 22rpx;
}

.pocket__form_body .change_video{
    text-align: center;
    color: #c63629;
    font-size: 24rpx;
    line-height: 36rpx;
    margin: -16rpx 0 -23rpx 12rpx;
}

.pocket__form_body button{
    background-color: #e83e43;
    font-size: 32rpx;
    line-height: 80rpx;
    color: #fff;
    width: 544rpx;
    border-radius: 20px;
    box-shadow: 5rpx 5rpx 10rpx #d7ac9e;
}

.pocket__form_footer{
    color: #83827b;
    font-size: 24rpx;
    line-height: 36rpx;
    margin: -30rpx 0 0;
    padding-bottom: 13rpx;
    text-align: center;
}

.pocket__new_link{
    margin:35rpx 45rpx 31rpx;
    padding: 16rpx 22rpx;
    background-color: #fff;
    -webkit-border-radius: 5px;
    -moz-border-radius: 5px;
    border-radius: 5px;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.pocket__new_link .like{
    width: 161rpx;
    height: 124rpx;
}
.pocket__new_link .like_text{
    color: #e44747;
    font-size: 36rpx;
    margin-left: 57rpx;
}


.tab__bar {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 108rpx;
    background-color: #e16548;
    display: flex;
    justify-content: space-around;
    align-items:center;
    bottom: 0;
}

.tab__bar_item{
    width: 30%;
    display: flex;
    flex-direction:column;
    align-items:center;
}

.tab__bar_item text{
    color: #fff;
    font-size: 24rpx;
    line-height: 24rpx;
}

.record{
    width: 42rpx;
    height:34rpx;
    margin-bottom: 9rpx;
}

.money{
    width: 45rpx;
    height: 45rpx;
    margin-bottom: 10rpx;
}

.mine{
    width: 38rpx;
    height: 41rpx;
    margin-bottom: 9rpx;
}

.pop{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 9999;
}

.pop.hide{
    display: none;
}

.pop_shade{
    background-color: #000;
    opacity: 0.82;
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    z-index: -1;
}

.pop_close{
    width: 46rpx;
    height: 46rpx;
    position: absolute;
    top: 194rpx;
    right: 116rpx;
}

.pop_tips_bg{
    width: 426rpx;
    height: 530rpx;
    margin: 227rpx auto 36rpx;
}

.pop_tips_bg image{
    width: 100%;
    height: 100%;
}
.pop_tips_text{
    margin-top: -280rpx;
    text-align: center;
    display: flex;
    flex-direction:column;
}
.pop_tips_text text{
    color: #fff;
}
.tips1{
    font-size: 32rpx;
    margin-bottom: 26rpx;
}

.tips2{
    font-size: 42rpx;
    margin-bottom: 21rpx;
}

.tips2 text{
    color: #ffcb3d;
}

.tips3{
    font-size: 24rpx;
}

.pop_pocket_btn{

}

.pop_pocket_btn button{
    background-color: #ff2949;
    color: #fff;
    font-size: 32rpx;
    width:266rpx;
    height: 80rpx;
    margin-top: 94rpx;
}
.pos {
  position: absolute;
  opacity: 0;
}