page{
    overflow-x: hidden;
    background-color: #f3f3f3;
}
.share__pocket {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #e7ba60;
    background-color: #c63629;
}

.share__pocket_bg{
    width: 130%;
    background-color: #daab5f;
    height: 600rpx;
    border-radius: 50%;
    margin-top: -440rpx;
}

.share__pocket_info{
    display: flex;
    flex-direction: column;
    align-items: center;
}

.share__pocket_info .avatar{
    width: 150rpx;
    height: 150rpx;
    border: 3px solid #fff;
    border-radius: 50%;
    margin-top: -85rpx;
    margin-bottom: 30rpx;
}

.share__pocket_info .avatar image{
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.share__pocket_info .nickname{
    font-size: 30rpx;
    line-height: 1;
    margin-bottom: 80rpx;
}

.share__pocket_info .theme{
    line-height: 1;
    font-size: 72rpx;
    margin-bottom: 88rpx;
    padding: 0 70rpx;
    text-align: center;
}



.share__pocket .tip{
    height: 130rpx;
    color: #e7ba60;
    font-size: 32rpx;
    display: flex;
    align-items: center;
}

.status1 text{
    margin-left: 40rpx;
    border-bottom: 1px solid #e7ba60;
    padding-bottom: 8rpx;
}

.status2{
    background-color: #ff5545;
    padding: 24rpx 145rpx;
    color: #fff;
    border-radius: 20px;
    font-size: 32rpx;
    line-height:1;
}

.active{
    background-color: #B33125;
}

.status3{

}

.status3 text{
    font-size: 72rpx;
    margin-right: 34rpx;
}

.share__link{
    display: flex;
    flex-direction:row;
    height: 90rpx;
    color: #fff;
    line-height:90rpx;
    justify-content: space-around;
    background-color: #c63629;
}

.share__link view{
    width: 30%;
    text-align: center;
    font-size: 26rpx;
}

.record__list{
    display: flex;
    flex-direction: column;
    width:100%;
    background-color: #f3f3f3;
}

.record__list_header{
    height: 63rpx;
    line-height:63rpx;
    font-size: 24rpx;
    color: #8c8c8c;
    padding: 0 15rpx 0 30rpx;
    display: flex;
    justify-content:space-between;
    border-bottom: 1px solid #c6c6c6;
}

.report{
    color: #5f486f;
}

.record__list_item{
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 28rpx;
    line-height:1;
    color: #1d1d1d;
    border-bottom: 1px solid #c6c6c6;
    height: 143rpx;
    padding: 30rpx;
    box-sizing: border-box;
    position: relative;
}

.record__list_item image{
    width: 85rpx;
    height:85rpx;
    margin-right: 30rpx;
}

.record__list_item .info{
    display: flex;
    flex-direction:column;
    justify-content:space-between;
    height: 100%;
}

.record__list_item .time{
    color: #b1b1b1;
}

.record__list_item .num{
    position: absolute;
    top: 58rpx;
    right: 30rpx;
}