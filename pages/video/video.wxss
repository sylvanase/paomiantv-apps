page{
    overflow-x: hidden;
}
.video__tips {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #e7ba60;
}

.video__tips_bg{
    width: 165%;
    background-color: #daab5f;
    height: 600rpx;
    border-radius: 50%;
    margin-top: -240rpx;
}

.video__tips_link{
    width: 544rpx;
    height: 334rpx;
    border: 10rpx solid #e86958;
    border-radius: 5px;
    box-shadow: 5rpx 3rpx 5rpx rgba(132,6,6,0.5);
    background-color: #fff;
    text-align: center;
    margin-top: -330rpx;
    margin-bottom: 60rpx;
}

.video__tips_link image{
    width: 217rpx;
    height: 215rpx;
    margin-top: 30rpx;
    margin-bottom: 20rpx;
}

.video__tips_link .text{
    color: #b78f3e;
    font-size: 36rpx;
    line-height:1;
}

.tip1{
    font-size: 24rpx;
    line-height: 1;
    margin: 25rpx auto 23rpx;
}

.tip2{
    font-size: 48rpx;
    line-height: 1;
    margin-bottom: 28rpx;
    color: #fff;
}

.tip3{
    font-size: 28rpx;
    line-height: 1;
    margin-bottom: 40rpx;
    color: #fff;
}

.video__list{
    display: flex;
    flex-direction: row;
    justify-content:space-around;
    flex-wrap: wrap;
}

.video__list_item{
    width: 30%;
    text-align: center;
    margin-bottom: 42rpx;
}

.video__list_item .cover{
    border: 3px solid #e7ba60;
    width: 174rpx;
    height:244rpx;
    margin: 0 auto 20rpx;
    overflow: hidden;
    display: flex;
    align-items: center;
}

.video__list_item image{
    width: 100%;
}

.video__list_item button{
    width: 190rpx;
    background-color: #e7ba60;
    font-size: 26rpx;
    color: #fff;
    height: 50rpx;
    line-height: 50rpx;
}
.pos {
  position: absolute;
  opacity: 0;
}
.pop{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 9999;
}
.pop.hide{
    display: none;
}

.pop video{
   width:100%;
    height: 100%;
}