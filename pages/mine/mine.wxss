page{
    width: 100%;
    height:100%;
    background-color: #fff;
}

.mine__info{
    display: flex;
    flex-direction: column;
    background-color: #c63629;
    padding: 54rpx 0 34rpx;
    align-items: center;
    color: #fff;
}

.avatar {
    width: 103rpx;
    height: 103rpx;
    margin-bottom: 50rpx;
    border-radius: 50%;
    border: 6rpx solid #eee;
}

.nickname {
    font-size: 24rpx;
    line-height: 1;
    margin-top: -6rpx;
}

.mine__info_bar{
    width: 100%;
    display: flex;
    justify-content: space-around;
    align-items:center;
    margin-top: 70rpx;
}

.mine__info_bar_item{
    width: 30%;
    display: flex;
    flex-direction:column;
    align-items:center;
    font-size: 24rpx;
    line-height:1;
}

.mine__info_bar_item .record{
    width: 42rpx;
    height:34rpx;
    margin-bottom: 18rpx;
}

.mine__info_bar_item .money{
    font-size: 30rpx;
    color: #e7ba60;
    margin-bottom: 16rpx;
}

.mine__info_bar_item .service{
    width: 54rpx;
    height:42rpx;
    margin-bottom: 14rpx;
}

.help__list_item{
    position: relative;
    padding: 0  30rpx 0 36rpx;
    display: flex;
    font-size:32rpx;
    color: #1d1d1d;
    height: 111rpx;
    border-bottom: 1px solid #eee;
    align-items:center;
}

.help__list_item image{
    width: 41rpx;
    height: 41rpx;
    margin-right: 36rpx;
}

.help__list_item .arrow{
    position: absolute;
    right: 0;
    top: 50%;
    margin-top: -10.5rpx;
    width: 10.4rpx;
    height:21rpx;
}