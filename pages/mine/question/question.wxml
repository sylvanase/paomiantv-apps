<!--index.wxml-->
<view class="container">
    <scroll-view class="question__list" scroll-y="true">
        <block wx:for="{{ questionList }}">
            <view class="question__list_item {{ index == openItem ? 'open':'' }}" data-id="{{ index }}" bindtap='openItem'>
                <view class="title">
                    <text>{{ item.title }}</text>
                    <image src="{{ item.open ? '/assets/question_open.png':'/assets/question_close.png' }}"></image>
                </view>
                <view class="des">
                    {{ item.des }}
                </view>
            </view>
        </block>
    </scroll-view>
</view>
