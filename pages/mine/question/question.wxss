page{
    width: 100%;
    height:100%;
    background-color: #ebeaea;
}
.container{
    padding: 26rpx 22rpx;
    overflow-y: auto;
}


.question__list_item{
    background-color: #fff;
    -webkit-border-radius: 5px;
    -moz-border-radius: 5px;
    border-radius: 5px;
    display: flex;
    flex-direction:column;
    color: #1d1d1d;
    margin-bottom: 26rpx;
}

.question__list_item.open .title{
    color: #b1b1b1;
}

.question__list_item.open .des{
    display: block;
}

.question__list_item .title{
    display: flex;
    padding: 27rpx 25rpx;
    font-size: 28rpx;
    line-height: 1;
    justify-content: space-between;
}
.question__list_item image{
    width: 38rpx;
    height: 29rpx;
}

.question__list_item .des{
    border-top: 1px solid #979797;
    padding: 20rpx 24rpx;
    font-size: 26rpx;
    line-height: 1.5;
    display: none;
}
