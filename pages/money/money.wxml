<view class="container">
    <!-- 账户的余额 -->
    <view class="money__total">
        <view class="money__total_bar">
            <view>账户余额</view>
            <view bindtap="linkToAccount">收支明细</view>
        </view>
        <view class="money__total_num">
            <text>8088</text>元
        </view>
    </view>
    <!-- 提现操作区 -->
    <view class="money__form">
        <view class="money__form_body">
            <view class="money__form_title">提现金额</view>
            <view class="money__form_input">
                <view class="label">￥</view>
                <input type='number' placeholder='请输入提现金额' placeholder-class="placeholder"></input>
            </view>
            <view class="money__form_input_tips">需支付0.1元服务费</view>
            <view class="money__form_all">提现到微信钱包 <text>全部提现</text></view>
        </view>
        <!-- 输入数字后去掉 disabled -->
        <view class="money__form_btn disabled">
            立即提现
        </view>
        <view class="money__form_tips">预计1-5个工作日到账</view>
    </view>
</view>
