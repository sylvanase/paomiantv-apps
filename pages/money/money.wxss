page {
    background-color: #eeeeee;
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.money__total{
    padding: 32rpx 34rpx 53rpx;
    background-color: #c63629;
}

.money__total_bar{
    display: flex;
    color: #fff;
    font-size: 28rpx;
    line-height: 1;
    justify-content: space-between;
    margin-bottom: 52rpx;
}

.money__total_num{
    color: #fec85a;
    line-height: 1;
    font-size: 36rpx;
}

.money__total_num text{
    font-size: 72rpx;
    margin-right: 34rpx;
}

.money__form{
    padding: 43rpx 34rpx 0;
}

.money__form_body{
    border-radius: 5px;
    box-shadow: 0 0 15rpx rgba(111, 111, 111, 0.5);
    display: flex;
    flex-direction: column;
    padding: 30rpx 32rpx;
    background-color: #fff;
}

.money__form_title{
    color: #1d1d1d;
    font-size: 32rpx;
    line-height: 1;
    margin-bottom: 70rpx;
    text-align: center;
}

.money__form_input{
    padding-bottom: 32rpx;
    border-bottom: 1px solid #e5e5e5;
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-bottom: 20rpx;
}

.money__form_input .label{
    font-size: 78rpx;
    color: #1d1d1d;
    line-height: 1;
}

.placeholder{
    color: #c6c6c6;
}

.money__form_input_tips,.money__form_all{
    color: #b1b1b1;
    font-size: 24rpx;
    line-height:1;
}

.money__form_input_tips{
    margin-bottom: 19rpx;
}

.money__form_all text{
    color: #6e8db1;
}

.money__form_btn{
    background-color: #e7ba60;
    color: #fff;
    font-size: 32rpx;
    line-height:1;
    border-radius: 50rpx;
    text-align: center;
    margin-top: 44rpx;
    margin-bottom: 37rpx;
    padding: 35rpx 0;
}

.money__form_btn.disabled{
    background-color: #ddd;
}

.money__form_tips{
    color: #eb2f2f;
    font-size: 24rpx;
    text-align: center;
}

